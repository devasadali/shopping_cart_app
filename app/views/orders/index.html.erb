<h1>Order History</h1>

<% if @orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Order Number</th>
        <th>Customer Name</th>
        <th>Shipping Address</th>
        <th>Phone Number</th>
        <th>Payment Method</th>
        <th>Total Amount</th>
        <th>Order Date</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.name %></td>
          <td><%= order.address %></td>
          <td><%= order.phone %></td>
          <td><%= order.payment_method %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><%= order.created_at.strftime('%b %d, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No orders found.</p>
<% end %>
